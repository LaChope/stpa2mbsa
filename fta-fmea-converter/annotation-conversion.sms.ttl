<http://onto.fel.cvut.cz/ontologies/msmt/annotation-conversion>
  a owl:Ontology ;
  owl:imports <http://onto.fel.cvut.cz/ontologies/s-pipes-lib> ;
.

:construct-fta-model
  a sml:ApplyConstruct ;
  sm:next :convert-document_Return ;
  sml:constructQuery [
      a sp:Construct ;
      sp:text """# 1 - create individuals for all concepts
CONSTRUCT{
    ?newc a ?newType.
    ?newc fta:hasName ?label.
    ?newc fta:origin ?c    
}WHERE{
    ?c a ?oldType.
    OPTIONAL{
       ?c rdfs:label ?label.
    }
    BIND(IRI(CONCAT(str(fta:), REPLACE(str(?c), "^.*/([^/]+$)","$1"))) AS ?newc)
}VALUES (?oldType ?newType) {
    (fmea:Component fta:Component)
    (fmea:FailureMode fta:FailureMode)
    (fmea:Function fta:Function)
    (fmea:FinalLevelEffect fta:FaultEvent)
    (fmea:LocalEffect fta:FaultEvent)
    (fmea:NextLevelEffect fta:FaultEvent)
}
""" ;
    ] ;
  kbss-module:has-output-graph-constraint [
      a sp:Ask ;
      sp:text """# 1 - component not found
ASK
WHERE {
    FILTER NOT EXISTS {
          ?rd a fta:Component .
    }
}""" ;
    ] ;
  sml:replace true ;
.

:import-annotated-document-ontology
  a sml:ImportRDFFromWorkspace ;
  sm:next :construct-fta-model ;
  sml:baseURI "http://onto.fel.cvut.cz/ontologies/fmea/19msmt/BlueSky/DA42-POH--has-component/DA42-POH-38" ;
  sml:ignoreImports true ;
.

:list-documents_Return
  a sml:ReturnRDF ;
  sml:serialization sml:Turtle ;
.

:convert-document_Return
  a sml:ReturnRDF ;
  sml:serialization sml:Turtle ;
.

:list-documents
  a sm:Function ;
  sm:returnModule :list-documents_Return ;
  rdfs:subClassOf sm:Functions ;
.

:convert-document
  a sm:Function ;
  sm:returnModule :convert-document_Return ;
  rdfs:subClassOf sm:Functions ;
.

